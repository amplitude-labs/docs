{
  "openapi": "3.0.0",
  "info": {
    "title": "API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/extract": {
      "post": {
        "summary": "Accept file and extract",
        "operationId": "accept_file_and_extract",
        "requestBody": {
          "description": "ExtractForm object containing the URL and filters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExtractForm"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Extraction accepted and task created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/file": {
      "post": {
        "summary": "Accept file and index",
        "operationId": "accept_file_and_index",
        "requestBody": {
          "description": "Multipart form data with file, webhook URL, and a JSON configuration",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "webhook_url": {
                    "type": "string"
                  },
                  "config": {
                    "type": "string",
                    "description": "A JSON string representing the Config object"
                  }
                },
                "required": ["file", "webhook_url", "config"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File accepted and indexing task created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file_id": {
                      "type": "string",
                      "format": "uuid"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "summary": "Ping endpoint",
        "operationId": "ping_pong",
        "responses": {
          "200": {
            "description": "Returns pong",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ExtractForm": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "filters": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Filter object with custom properties",
              "additionalProperties": true
            }
          }
        },
        "required": ["url", "filters"]
      },
      "Config": {
        "type": "object",
        "properties": {
          "page_router_parameters": {
            "type": "object",
            "description": "Parameters for page routing",
            "additionalProperties": true
          }
        },
        "required": ["page_router_parameters"]
      }
    }
  }
}
